function print_scf_in
{
cat > $PREFIX.scf_cdm$CELL_DIM3.in << EOF
&control
    calculation       = 'scf'
    restart_mode      = 'from_scratch'
    prefix            = '$PREFIX'
    tstress           = .true.
    tprnfor           = .true.
    pseudo_dir        = '$PSEUDO_DIR'
    outdir            = '$TMP_DIR'
    verbosity         = 'high'
    disk_io = 'minimal'
    wf_collect        = .true.
/
&system
    ibrav             = 4
    celldm(1)         = $CELL_DIM
    celldm(3)         =  $CELL_DIM3
    nat               =  2
    ntyp              = 2
    ecutwfc           =  $CUTOFF
    nbnd              = $nbnd
/
&electrons
    conv_thr          = 1.0d-8
    mixing_mode       = 'plain'
    mixing_beta       = 0.7d0
/
&ions
    ion_dynamics='bfgs',
    upscale=10
/

ATOMIC_SPECIES
B   10.811  B.pz-vbc.UPF
N   14.067  N.pz-vbc.UPF

ATOMIC_POSITIONS {alat}
B     0.000000000   0.577350300   0.00
N     0.500000000   0.288675100   0.00

K_POINTS {automatic}
12 12 1   1 1 1
EOF
}
